@page
@model Graduation_Project_Dashboard.Pages.Products.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Products";
    ViewData["BreadCrumb"] = "<a href='/Products' class='breadcrumb-item'>Products</a>";
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}


<div class="card">
    <div class="card-header pb-0">
        <h5 class="mb-0">Products List</h5>
    </div>
    <table class="table datatable-users table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Category</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @if (item.ImageURL == null)
                        {

                            <img src="/uploads/clinics/2.webp" alt="image" style="width:80px" class="rounded-circle" />


                        }
                        else
                        {

                            <img src="@item.ImageURL" alt="image" style="width:80px"  />
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.Name)

                    </td>
               

                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="text-teal"><i class="icon-pencil7"></i> Edit</a> |
                        @*                         <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a>
                    *@
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink"><i class="icon-bin"></i> Deactive</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
