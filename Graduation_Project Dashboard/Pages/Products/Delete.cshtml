@page
@model Graduation_Project.Dashboard.Pages.Products.DeleteModel
@using Graduation_Project.Shared.Models;


@{
    ViewData["Title"] = "Delete";
    ViewData["Entity"] = "Products";
    ViewData["BreadCrumb"] = "<a href='/Products' class='breadcrumb-item'>Products</a>";
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}



<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Are you sure you want to delete this?</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-2  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.Id)
                        </label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.Product.Id)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.Name)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.Product.Name)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            image
                        </label>
                        <div class="col-lg-8">

                            @if (Model.Product.ImageURL == null)
                            {

                                <img src="/uploads/clinics/2.webp" alt="image" style="width:80px" class="rounded-circle" />


                            }
                            else
                            {

                                <img src="@Model.Product.ImageURL" alt="image" style="width:80px"  />
                            }


                        </div>
                    </div>
                </fieldset>
            </div>



            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.Created)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.Product.Created)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.IsActive)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.Product.IsActive)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.Amount)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.Product.Amount)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.Product.Price)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.Product.Price)
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="card-footer d-flex justify-content-between align-items-center bg-light border-top-0">
            <input type="hidden" asp-for="Product.Id" />
            <a asp-page="./Index" class="btn btn-primary btn-labeled btn-labeled-start">
                Cancel
                <span class="btn-labeled-icon bg-black bg-opacity-20">
                    <i class="icon-arrow-left8"></i>
                </span>
            </a>
            <button type="submit" class="btn btn-danger btn-labeled btn-labeled-end">
                Deactive
                <span class="btn-labeled-icon bg-black bg-opacity-20">
                    <i class="icon-bin"></i>
                </span>
            </button>
        </div>
    </form>
</div>
