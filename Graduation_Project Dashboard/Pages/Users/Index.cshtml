@page
@model Graduation_Project_Dashboard.Pages.Users.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Users";
    ViewData["BreadCrumb"] = "<a href='/Users' class='breadcrumb-item'>Users</a>";
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}


<div class="card">
    <div class="card-header pb-0">
        <h5 class="mb-0">Users List</h5>
    </div>
    <table class="table datatable-users table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    image
                </th>
                <th>
                    Role
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.User[0].IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].PhoneNumber)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @if(item.ImageURL == null)
                        {

                            <img src = "/uploads/clinics/2.webp" alt = "image" style = "width:80px" class="rounded-circle" />


                        }
                        else
                        {
                            
                        <img src="@item.ImageURL" alt="image" style="width:80px" class="rounded-circle" />
                        }

                    </td>
                    <td>
                        @Html.Raw(Model.GetUserRole(item.Id))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="text-teal"><i class="icon-pencil7"></i> Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a>
                        @*|*@
                        @*<a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink"><i class="icon-bin"></i> Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
