@page
@model Graduation_Project_Dashboard.Pages.Teacher.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Teacher";
    ViewData["BreadCrumb"] = "<a href='/Teacher' class='breadcrumb-item'>Teacher</a>";
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}


<div class="card">
    <div class="card-header pb-0">
        <h5 class="mb-0">Parents List</h5>
    </div>
    <table class="table datatable-users table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>School Name</th>
                <th>Image</th>
                <th>Subjects</th>
                <th>Grades</th>
                <th>Is Active</th>
                <th>National ID</th>
                <th>Email</th>
                <th>Address</th>
                <th>Mobile Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teachers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolName)
                    </td>
                    <td>
                        @if (item.ImageURL == null)
                        {

                            <img src="/uploads/clinics/2.webp" alt="image" style="width:80px" class="rounded-circle" />


                        }
                        else
                        {

                            <img src="@item.ImageURL" alt="image" style="width:80px" class="rounded-circle" />
                        }

                    </td>
                    <td>
                        @foreach (var subject in item.Subjects)
                        {
                            <span>@subject.SubjectName</span>

                            @if (subject != item.Subjects.Last())
                            {
                                <span>,</span>
                            }                        }

                    </td>
                    <td>
                        @foreach (var grade in item.Grades)
                        {
                            <span>@grade.GradeTitle</span>
                            @if (grade != item.Grades.Last())
                            {
                                <span>,</span>
                            }
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NationalId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)


                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="text-teal"><i class="icon-pencil7"></i> Edit</a> |
@*                         <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a>
 *@                        
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink"><i class="icon-bin"></i> Deactive</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
