@model Graduation_Project_Dashboard.Pages.Parents.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["Entity"] = "Parents";
    ViewData["BreadCrumb"] = "<a href='/Parents' class='breadcrumb-item'>Parents</a>";
    Layout = "~/Pages/Shared/_MasterLayout.cshtml";
}


<div class="card">

    <div class="card-header">
        <h5 class="card-title mb-0">View Parents Details</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-2  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.ParentId)
                        </label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.ParentUser.ParentId)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.FirstName)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.FirstName)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            image
                        </label>
                        <div class="col-lg-8">

                            @if (Model.ParentUser.ImageURL == null)
                            {

                                <img src="/uploads/clinics/2.webp" alt="image" style="width:80px" class="rounded-circle" />


                            }
                            else
                            {

                                <img src="@Model.ParentUser.ImageURL" alt="image" style="width:80px" class="rounded-circle" />
                            }


                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            School Name
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.SchoolName)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.IsActive)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.IsActive)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.NationalId)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.NationalId)
                        </div>
                    </div>
                </fieldset>
            </div>



            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.Address)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.Address)
                        </div>
                    </div>
                </fieldset>
            </div>



            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.Email)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.Email)
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.PhoneNumber)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.PhoneNumber)
                        </div>
                    </div>
                </fieldset>
            </div>




            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.ParentUser.StudentList)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.ParentUser.StudentList)
                        </div>
                    </div>
                </fieldset>
            </div>


        </div>






    </div>
    <div class="card-footer d-flex justify-content-between align-items-center bg-light border-top-0">
        <a asp-page="./Index" class="btn btn-primary btn-labeled btn-labeled-start">
            Back
            <span class="btn-labeled-icon bg-black bg-opacity-20">
                <i class="icon-arrow-left8"></i>
            </span>
        </a>
